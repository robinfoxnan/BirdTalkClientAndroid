<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.
     -->
    <style name="Theme.BirdTalkClient" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FAFAFA</item>
        <item name="colorOnPrimary">#FAFAFA</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorSecondary">#F5F5F5</item>
        <item name="colorOnSecondary">#AAAAAA</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar">true</item>   <!-- 状态栏文字图标深色显示（配合白色背景） -->
    </style>

    <style name="Theme.BirdTalkClient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BirdTalkClient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BirdTalkClient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
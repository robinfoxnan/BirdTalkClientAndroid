<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建群组"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222222"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 群头像 -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_border_no"
            android:src="@drawable/icon4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvAvatarHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置群头像"
            android:textSize="12sp"
            android:textColor="#999999"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"/>

        <!-- 卡片：基本信息 -->
        <LinearLayout
            android:id="@+id/cardBaseInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvAvatarHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 群名称 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群名称"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etGroupName"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:hint="请输入群名称（必填）"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <!-- 群 TAG -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群 TAG"
                android:layout_marginTop="16dp"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etGroupTag"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:hint="例如：摄影 / 编程 / 留学"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"/>

            <!-- 群简介 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群简介"
                android:layout_marginTop="16dp"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etGroupDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:hint="介绍一下这个群是做什么的吧"
                android:gravity="top"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 卡片：群权限 -->
        <LinearLayout
            android:id="@+id/cardPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardBaseInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 群类型 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群类型"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <RadioGroup
                android:id="@+id/rgGroupType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公有群"/>

                <RadioButton
                    android:id="@+id/rbPrivate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="私有群"/>
            </RadioGroup>

            <!-- 入群方式 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入群方式"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:textColor="#333333"/>

            <RadioGroup
                android:id="@+id/rgJoinType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbJoinDirect"
                    android:text="允许直接加入"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />

                <RadioButton
                    android:id="@+id/rbJoinApply"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="需要申请审核"/>

                <RadioButton
                    android:id="@+id/rbJoinInvite"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="仅限邀请"/>
            </RadioGroup>
        </LinearLayout>

        <!-- 创建按钮 -->
        <Button
            android:id="@+id/btnCreateGroup"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="创建群组"
            android:textSize="16sp"
            android:textColor="#333333"
            android:background="@drawable/rounded_background_gray_input"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardPermission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

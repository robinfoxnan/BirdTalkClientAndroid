<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recordAudioShortPanel"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:orientation="horizontal"
    android:padding="6dp"
    android:visibility="gone"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/durationShort"
        style="?android:attr/editTextPreferenceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="00:00"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/audioWaveShort"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:src="@drawable/tag_background" />

    <View
        android:layout_width="128dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/delete_recording_hint"
        android:paddingStart="6dp" />

</LinearLayout>
